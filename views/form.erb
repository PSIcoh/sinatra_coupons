<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <form class="" action="/form" method="post">
        <div class="form-group">
          <label class="form-control" for="title">Title: </label>
          <input type="text" class="form-control" name="title" value="">
        </div>
        <div class="form-group">
          <label class="form-control" for="description">Description: </label>
          <input type="text" class="form-control" name="description" value="">
        </div>
        <div class="form-group">
          <label class="form-control" for="product">Product: </label>
          <input type="text" class="form-control" name="product" value="">
        </div>
        <div class="form-group">
          <label class="form-control" for="discount_price">Discount Price: </label>
          <input type="number" step="any" class="form-control" name="discount_price" value="">
        </div>
        <div class="form-group">
          <label class="form-control" for="expiration_date">Expiration Date: </label>
          <input type="date" class="form-control" name="expiration_date" value="">
        </div>
